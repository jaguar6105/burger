<h1>Burgers</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
  {{#each burgers}}
      {{> burgers/burger-block}}
  {{/each}}
</ul>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger:</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
