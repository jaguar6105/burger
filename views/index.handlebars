<h1>Burgers</h1>


<ul>
  {{#each burgers}}
      {{> burgers/burger-block}}
  {{/each}}
</ul>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
