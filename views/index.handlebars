<h1>Burgers</h1>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Not Eaten</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bu">Burger:</label>
          <input type="text" id="bu" name="burger_name">
        </div>

        <button type="submit">Add Burger</button>
      </form>

    </div>
    <div class="col-sm">
      <h2>Eaten</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
        {{/each}}</ul>
    </div>
  </div>
</div>